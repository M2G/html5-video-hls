{
  "name": "webpack-typescript-starter-pack",
  "version": "0.0.2",
  "description": "A basic webpack config using TypeScript (and/or JS)",
  "main": "./src/index.ts",
  "private": false,
  "author": "M2G",
  "license": "MIT",
  "keywords": [
    "webpack",
    "typescript",
    "jest",
    "typescript",
    "husky"
  ],
  "homepage": "https://github.com/M2G/webpack-typescript-starter-pack#readme",
  "bugs": {
    "url": "https://github.com/M2G/webpack-typescript-starter-pack/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/M2G/webpack-typescript-starter-pack.git"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts, .; exit 0",
    "test:e2e": "node_modules/.bin/nightwatch -c ./tests/e2e/nightwatch.conf.js --env chrome",
    "test": "jest --env=jsdom --passWithNoTests",
    "test:watch": "jest --watch",
    "start:dev": "PORT=9001 NODE_ENV=development webpack serve --config ./config/development/webpack.config.js --mode development",
    "start:staging": "NODE_ENV=staging webpack serve --config ./config/staging/webpack.config.js --mode staging",
    "start:prod": "NODE_ENV=production webpack serve --config ./config/development/webpack.config.js --mode production",
    "build:dev": "NODE_ENV=development webpack --mode development --config ./config/development/webpack.config.js --progress --watch",
    "build:staging": "NODE_ENV=staging webpack --mode staging --config ./config/staging/webpack.config.js --progress",
    "build:production": "NODE_ENV=production webpack --mode production --config ./config/production/webpack.config.js --progress",
    "publish:npm": "rm -rf ./build && NODE_ENV=production webpack --mode production --config ./config/publish/webpack.config.js --progress",
    "build-storybook": "build-storybook",
    "storybook": "start-storybook -p 9006 --no-manager-cache",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "6.5.0-alpha.40",
    "@storybook/addon-actions": "6.5.0-alpha.40",
    "@storybook/addon-backgrounds": "6.5.0-alpha.40",
    "@storybook/addon-controls": "6.5.0-alpha.40",
    "@storybook/addon-docs": "6.5.0-alpha.40",
    "@storybook/addon-jest": "6.5.0-alpha.40",
    "@storybook/addon-links": "6.5.0-alpha.40",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storyshots": "6.5.0-alpha.40",
    "@storybook/addon-storysource": "6.5.0-alpha.40",
    "@storybook/addon-viewport": "6.5.0-alpha.40",
    "@storybook/addons": "6.5.0-alpha.40",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/client-api": "6.5.0-alpha.40",
    "@storybook/core": "6.5.0-alpha.40",
    "@storybook/core-events": "6.5.0-alpha.40",
    "@storybook/html": "6.5.0-alpha.40",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/source-loader": "6.5.0-alpha.40",
    "@svgr/webpack": "^6.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.25",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.2",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^6.6.0",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "cssnano": "^4.1.11",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^2.6.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "global": "^4.4.0",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^5.5.0",
    "http-proxy-middleware": "^2.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.6.3",
    "lint-staged": "^12.3.4",
    "mini-css-extract-plugin": "^2.5.3",
    "node-sass": "^6.0.1",
    "postcss": "^8.4.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^6.2.1",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.4.1",
    "prettier": "^2.5.1",
    "resolve": "^1.22.0",
    "resolve-url-loader": "^4.0.0",
    "sass-loader": "10.2.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^3.1.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^8.3.0",
    "typescript": "^4.5.5",
    "validate-branch-name": "^1.2.1",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-manifest-plugin": "^4.1.1",
    "workbox-webpack-plugin": "^6.4.2"
  },
  "dependencies": {
    "hls.js": "^1.3.2-0.canary.8889",
    "husky": "^7.0.4"
  },
  "settings": {
    "alias": {
      "map": [
        [
          "constants",
          "./src/constants"
        ],
        [
          "config",
          "./src/config"
        ],
        [
          "components",
          "./src/components"
        ],
        [
          "api",
          "./src/api"
        ],
        [
          "utils",
          "./src/utils"
        ],
        [
          "actions",
          "./src/actions"
        ],
        [
          "reducers",
          "./src/reducers"
        ],
        [
          "schemas",
          "./src/schemas"
        ],
        [
          "store",
          "./src/store"
        ],
        [
          "storage",
          "./src/storage"
        ],
        [
          "hooks",
          "./src/hooks"
        ],
        [
          "tests",
          "./src/tests"
        ],
        [
          "styles",
          "./src/styles"
        ],
        [
          "fixtures",
          "./src/fixtures"
        ]
      ]
    }
  },
  "files": [
    "build/*"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "validate-branch-name && npm test",
      "post-merge": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet package-lock.json && npm ci"
    }
  },
  "lint-staged": {
    "*.(ts|css)": [
      "prettier --write --ignore-path .eslintignore"
    ],
    "*!(.d).(ts)": [
      "eslint --fix"
    ]
  },
  "validate-branch-name": {
    "pattern": "^master$|stable$|^v\\d+.\\d+$|^release/v\\d+.\\d+$|^(fix|chore|poc|feature|style)[_][\\w-]+$|^IM-[0-9]+[\\w-]+$",
    "errorMsg": "Branch name format accepted: IM-XXX_some_keyworks, vXX.XX or (fix|chore|poc)_some_keyworks"
  }
}
